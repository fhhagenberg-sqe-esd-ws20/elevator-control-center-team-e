<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="itemtemplate" >
   <children>
      <Label styleClass="numbering" text="${item.floorNr}" />
      
      <!-- TODO: conditional image-showing -->
      
      <ImageView  visible="${item.floorButtonDown}" 
      fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/down_empty.png" />
         </image></ImageView>
      <ImageView  visible="${item.floorButtonUp}"
      fitHeight="50.0" fitWidth="50.0" layoutX="10.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/up_empty.png" />
         </image></ImageView>
      <ImageView  visible="${item.elevatorButton}"
      fitHeight="50.0" fitWidth="50.0" layoutX="60.0" layoutY="10.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../icons/stop_empty.png" />
         </image></ImageView>
      <Label text="   "/> <!-- cheat a right margin to button -->
      <Button onAction="#doSetTarget" disable="${!item.elevatorServicesFloor}"
      mnemonicParsing="false" text="set target" />
   </children>
</HBox>